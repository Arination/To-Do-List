<%- include('partials/header'); -%>

<main>
    <div class="date-el"><%= currentDate %></div>
    <div class="box">
        <div class="limit">
            <p>--Add your TO DOs below--</p>
        </div>
        <div class="limit">
            <h6>Kindly limit to 50 words please</h6>
        </div>
        <% list.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input name="checkbox" class="checkbox" type="checkbox" value="<%= item._id%>" onchange="this.form.submit()">
                    <p class="task">
                        <%= item.name %>
                    </p>
                </div>
            </form>
        <% }); %>
        <form action="/" method="post" class="item">
            <input class="textarea" type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus="autofocus">
            <button class="btn" type="submit" name="list">+</button>
        </form>
    </div>
</main>

<%- include('partials/footer'); -%>